{% extends "themes/base_admin.html.twig" %}
{% block title %}Liste des caterories {% endblock %}

{% block description %}Liste des caterories{% endblock %}

{% block keywords %}admin, Liste, caterories{% endblock %}


{# jQuery #}
{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
<link href="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.js"></script>
<script>
    $(document).ready( function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.0.7/i18n/fr-FR.json',
            },
        });
    } );
</script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5"> Liste des caterogies</h1>

        {% include 'components/_alert.html.twig' %}

        <div class="d-flex justify-content-end align-items-center my-3">

            <a href="{{path('admin_category_create')}}" class="btn btn-primary shadow"></a><i class="fa-solid fa-plus"></i>>Nouvelle catégorie</a>
        </div>

        <div class="table-responsive">
        <table id="myTable" class="table table-striped table-hover text-center table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr>
                    <td>{{category.id}}</td>
                    <td>{{category.name}}</td>
                    <td>{{category.slug}}</td>
                    <td>{{category.createdAt|format_date()}}</td>
                    <td>{{category.updeatedAt|format_date()}}</td>
                    <td>
                        <a href="{{path('admin_category_edit',{'id': category.id})}}"class="btn btn-sm btn-secondary"> Modifier</a>
                      <form class="d-inline" action="{{path('admin_category_delete', {'id':category.id})}}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{csrf_token('delete_category_'~category.id)}}">
                                <input onclick="return confirm('Confimer la surppression')" type="submit" class="btn btn-primary btn-danger" value="Supprimer">
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}