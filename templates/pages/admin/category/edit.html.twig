{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifier: {{category.name}} {% endblock %}

{% block description %}Modifier cette categorie{% endblock %}

{% block keywords %}admin, Liste, caterories, modification{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5"> modifier cette categorie </h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="admin_category_form_name">Nom</label>
                        <div class="text-danger">{{ form_errors(form.name) }}</div>
                        {{form_widget(form.name, {'attr':{'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="btn btn-primary shadow" value="Modifier">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}